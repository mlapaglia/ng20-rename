{
  "name": "@mlapaglia/ng20-rename",
  "version": "1.0.0",
  "description": "A TypeScript package to refactor Angular applications to use the latest Angular naming conventions",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "ng20-rename": "dist/cli.js"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "clean": "rimraf dist",
    "dev": "npm run clean && npm run build:watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "prepublishOnly": "npm run clean && npm run build && npm test"
  },
  "keywords": [
    "angular",
    "refactor",
    "rename",
    "style-guide",
    "typescript",
    "cli"
  ],
  "author": "Matt LaPaglia",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mlapaglia/ng20-rename.git"
  },
  "bugs": {
    "url": "https://github.com/mlapaglia/ng20-rename/issues"
  },
  "homepage": "https://github.com/mlapaglia/ng20-rename#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@typescript-eslint/parser": "^8.39.1",
    "commander": "^11.1.0",
    "glob": "^11.0.3",
    "typescript": "^5.3.3"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^20.10.4",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.1.0",
    "jest": "^30.0.5",
    "jest-junit": "^16.0.0",
    "prettier": "^3.1.1",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  }
}
